<ImageButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
  android:layout_alignParentRight="true"
    android:background="@drawable/btn_feedback_selector" />

<LinearLayout
    android:id="@+id/tv00"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/iv_man"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_man_selector"/>
        
    <ImageButton
        android:id="@+id/iv_woman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_woman_selector"/>
    
   
    
</LinearLayout>

  <ImageButton
      android:id="@+id/tv01"
        android:layout_below="@id/tv00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_gift_selector"
        android:layout_centerHorizontal="true" 
        />
  
  
  <ImageButton
        android:layout_below="@id/tv01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_find_selector"
        android:layout_centerHorizontal="true" 
         />
  
  <ImageView
        android:layout_above="@id/tv00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pic_startpage_logo"
        android:layout_centerHorizontal="true" 
         />
</RelativeLayout>